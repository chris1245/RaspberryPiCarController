<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="0dip">

        <TextView
            android:id="@+id/left_stick_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Stick:"
            android:textSize="20sp"
            android:paddingStart="15dip"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/left_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Right Stick:"
            android:id="@+id/right_stick_label"
            android:textSize="20sp"
            android:paddingStart="15dip"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/right_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="D-Pad:"
            android:id="@+id/dpad_stick_label"
            android:textSize="20sp"
            android:paddingStart="15dip"
            android:layout_gravity="center_vertical" />

        <TextView
            android:id="@+id/dpad_stick"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dip"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <WebView
        android:id="@+id/webview"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

</LinearLayout>